<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - DVDRental 管理平台</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("styles", required: false)
</head>
<body>
    @{
        var permissions = Session["Permissions"] as List<string> ?? new List<string>();
        var staffName = Session["StaffName"] as string;
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🎬 DVDRental Management System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (permissions.Contains("View Films"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("🎥 影片清單", "Index", "Film", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("Manage Inventory"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("🏷 影片庫存", "Index", "Inventory", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("View Rentals"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("📋 客戶租借紀錄", "Index", "Rental", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("Access Reports"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("🖨 檢視報表分析", "Index", "Report", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("Manage Roles"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("🔐 角色管理", "Index", "Role", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("Manage Permissions"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("🔑 權限管理", "Index", "Permission", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("Assign Roles"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("👥 員工角色對應", "Index", "StaffRole", null, new { @class = "nav-link" })
                        </li>
                    }
                    @if (permissions.Contains("Assign Permissions"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("🚸 角色權限對應管理", "Index", "RolePermission", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (staffName != null)
                    {
                        <li class="nav-item">
                            <span class="navbar-text">
                                👋 歡迎，@(staffName+"("+Session["StoreId"]+")")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("Logout", "Account")">🚪 登出</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-success" href="@Url.Action("Login", "Account")">登入</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>



    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer mt-5 mb-3 text-center text-muted">
        <hr />
        <p>DVDRental 管理系統 &copy; 2025</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
